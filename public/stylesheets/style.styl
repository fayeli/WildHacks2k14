.bubble
{
  position: relative;
  width: 600px;
  height: 200px;
  padding: 10px;
  background: #FFFFFF;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
  border: #7EBF00 solid 5px;
}

.bubble:after
{
  content: '';
  position: absolute;
  border-style: solid;
  border-width: 11px 0 11px 41px;
  border-color: transparent #FFFFFF;
  display: block;
  width: 0;
  z-index: 1;
  right: -41px;
  top: 148px;
}

.bubble:before
{
  content: '';
  position: absolute;
  border-style: solid;
  border-width: 15px 0 15px 45px;
  border-color: transparent #7EBF00;
  display: block;
  width: 0;
  z-index: 0;
  right: -50px;
  top: 144px;
}

